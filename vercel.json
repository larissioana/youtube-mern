{
    "version": 2,
    "builds": [
      {
        "src": "frontend/youtube/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      },
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/youtube/dist/index.html"
      }
    ]
  }
  